<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :business_name %><br>
    <%= f.text_field :business_name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :business_needs %><br>
    <%= f.text_area :business_needs %>
  </div>
  <div class="field">
    <%= f.label :business_issues %><br>
    <%= f.text_area :business_issues %>
  </div>


  <div class="field">
    <%= label_tag :card_number, "Card Number" %><br>
    <%= text_field_tag :card_number, nil, { name: nil, :'data-stripe' => "number", class: "form-control" } %>
  </div>
  <div class="field">
    <%= label_tag :card_code, "CVV Number" %><br>
    <%= text_field_tag :card_code, nil, { name: nil, :'data-stripe' => "cvc", class: "form-control" } %>
  </div>
  <div class="field">
    <%= label_tag :card_month, "Expiration" %><br>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, :'data-stripe' => "exp-month", class: "form-control" }  %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, :'data-stripe' => "exp-month", class: "form-control" } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
